        <byte8_faker_suite>
            <general>
                <enabled>0</enabled>
                <default_email_domain>byte8.io</default_email_domain>
            </general>
            <customer>
                <name_prefix>test-</name_prefix>
                <surname_prefix>test-</surname_prefix>
                <address_prefix>test-</address_prefix>
                <email_prefix>test-</email_prefix>
